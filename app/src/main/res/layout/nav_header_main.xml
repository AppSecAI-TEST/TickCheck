<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_gravity="bottom"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/ivHeaderBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/civProfileImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/biglogo" />

    <TextView
        android:id="@+id/tvHeaderTitleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        android:text="Android Studio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toRightOf="@+id/civProfileImage"
        app:layout_constraintTop_toTopOf="@+id/civProfileImage" />

    <TextView
        android:id="@+id/tvHeaderContentBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:gravity="center"
        android:text="android.studio@android.com"
        app:layout_constraintBottom_toBottomOf="@+id/civProfileImage"
        app:layout_constraintLeft_toLeftOf="@+id/tvHeaderTitleBar"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitleBar" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civProfileImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="2"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
